<div class="container">
  <br><br>
  <h2>S'inscrire à l'évènement <%=@event.title%>, le <%=@event.start_date%> !</h2>

  <%= form_tag event_attendances_path do %>
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
      <label class="amount">
        <span>Prix : <%=@event.price%> euros</span>
      </label>
    </article>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
      data-description="Paiement inscription"
      data-amount=<%=@event.amount%>
      data-currency="eur"
      data-locale="auto"></script>
  <% end %>

</div>