<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <h2 class="h3 mb-3 font-weight-normal text-center">Modifier <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :Nouveau_mot_de_passe %> <i>(<% if @minimum_password_length %>
      <em><%= @minimum_password_length %> caract√®res minimum)</em>
    <% end %> <br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>

  </div>

  <div class="field">
    <%= f.label :Confirmation_mot_de_passe %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :Mot_de_passe_actuel %><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>
  <div class="actions mt-5">
    <%= f.submit "Modifier", class: "btn btn-lg btn-danger btn-block"  %>
  </div>
<% end %>
<br>
<p class="text-danger"><%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger"%></p>

<%= link_to "Retour", :back %>