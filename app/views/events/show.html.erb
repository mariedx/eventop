<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Créer un événement</title>
  </head>

  <body>

    <!-- JUMBOTRON -->

    <div class="jumbotron jumbotron-fluid background-image" id="showshow">
      <div class="container text-center">
        <h1 class="display-4 mt-5">Événement <%=@event.title%></h1>
        <br>
        <h2><%= @event.attendances.count %> <%= (@event.attendances.count) == 1 ? 'Participant' : 'Participants'%></h2>
        <a class="btn btn-light btn-lg" href=root_path role="button">Je participe</a>    
      </div>
    </div>

    <div class="container" style= "margin-bottom: 45px">
      <div class="row">
          <div class="col-sm-12">
            <h3>Date de début : <%=@event.start_date %></h3>
            <h3>Lieu : <%= @event.location %></h3>
            <h3>Durée : <%=@event.duration %> minutes</h3>
            <h3>Prix : <%= @event.price %>€</h3>
            <h3>Description : <%= @event.description %></h3>
            <h3>Orgnanisé par : <%= @event.admin.first_name %><%= @event.admin.last_name %></h3>
        </div>
      </div>
    </div>

  </body>
</html>