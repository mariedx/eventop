<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Profil</title>
  </head>
<body>

  <div class="container">
    <div class="text-center">
      <br>
      <h1> Profil</h1>
      <br>
      <!--image-->
        <div class="avatar mx-auto white">
          <img src="https://picsum.photos/200" class="rounded-circle">
        </div>
      <br>

      <!--text-->
      <div class="card-body">
      <h3 class="font-weight-light"><span class="text-secondary"><% if current_user.first_name != nil%> <%= @user.first_name%> <% end%> <% if current_user.last_name != nil%> <%= @user.last_name%> <% end%></span>
       <hr>
      <h6 class="font-weight-bold">Description: </h6> <p class="text-secondary">Description<%= @user.description %></p>
      <h6 class="font-weight-bold">Email: </h6> <p class="text-secondary"><%= @user.email %></p>
      </div>

      <!--boutons-->
      <%= link_to "Editer mes informations", edit_user_path(@user), :class => "btn btn-primary" %>
      <%= link_to "Editer mes identifiants", edit_user_registration_path(@user), :class => "btn btn-secondary" %>
    </div>
  </div>

  </body>